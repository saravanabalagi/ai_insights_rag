{
  "tasks": {
    "dev": "deno run -A --node-modules-dir npm:vite",
    "dev_docker": "deno run -A --node-modules-dir npm:vite --host",
    "build": "deno run -A --node-modules-dir npm:vite build",
    "preview": "deno run -A --node-modules-dir npm:vite preview",
    "serve": "deno run --allow-net --allow-read jsr:@std/http@1/file-server dist/"
  },
  "compilerOptions": {
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "jsxImportSourceTypes": "@types/react"
  },
  "imports": {
    "@/": "./src/",
    "@ant-design/icons": "npm:@ant-design/icons@^5.5.1",
    "@deno/vite-plugin": "npm:@deno/vite-plugin@^1.0.0",
    "@fortawesome/fontawesome-svg-core": "npm:@fortawesome/fontawesome-svg-core@^6.6.0",
    "@fortawesome/free-solid-svg-icons": "npm:@fortawesome/free-solid-svg-icons@^6.6.0",
    "@fortawesome/react-fontawesome": "npm:@fortawesome/react-fontawesome@^0.2.2",
    "@types/react": "npm:@types/react@^18.3.1",
    "@types/react-dom": "npm:@types/react-dom@^18.3.1",
    "@vitejs/plugin-react": "npm:@vitejs/plugin-react@^4.3.2",
    "antd": "npm:antd@^5.21.4",
    "autoprefixer": "npm:autoprefixer@^10.4.20",
    "postcss": "npm:postcss@^8.4.47",
    "react": "npm:react@^18.3.1",
    "react-dom": "npm:react-dom@^18.3.1",
    "react-draggable": "npm:react-draggable@^4.4.6",
    "react-markdown": "npm:react-markdown@^9.0.1",
    "sass": "npm:sass@^1.80.3",
    "swr": "npm:swr@^2.2.5",
    "tailwindcss": "npm:tailwindcss@^3.4.14",
    "vite": "npm:vite@^5.4.8"
  }
}
